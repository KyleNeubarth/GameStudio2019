pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
x = 0 y = 0
rot = 0.25
vel = 0
thrust = 1.05
friction = .98

function _update()
	if (btn(0)) then rot += 0.01 end
	if (btn(1)) then rot -= 0.01 end
	if (rot > 1) then rot -= 1 end
	if (rot < 0) then rot += 1 end
	
	if (btn(2)) then vel = max(vel,.1) * thrust end
	if (vel > 2) then vel = 1 end
	
	x -= cos(rot)*vel
	y -= sin(rot)*vel
	
end

function _draw()
	cls()
	rect(x+54,y+54,x+74,y+74)
	line(64,64,64+cos(rot)*5,64+sin(rot)*5)
end
